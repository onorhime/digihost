                <span class="text-xs xxl:text-sm">40% Interest</span><br>
                <span class="text-xs xxl:text-sm">$10,000 Minimum</span>
              </div>
            </div>
          </div>
          <!-- payment Overview -->
         
        </div>
       

      </div>
    </div>
  </main>

  {# modal 1 #}

   <div class="qt-modal fixed inset-0 z-[99] modalhide overflow-y-auto bg-n900/80 duration-500">
        <div class="overflow-y-auto">
            <div
            class="modal box modal-inner absolute left-1/2 -translate-y-1/2 top-1/2 max-h-[90vh] w-[95%] max-w-[496px] -translate-x-1/2 overflow-y-auto duration-300 xl:p-8">
            <div class="relative">
                <button class="qt-modal-close-btn absolute top-0 ltr:right-0 rtl:left-0">
                <i class="las la-times"></i>
                </button>
                <div class="bb-dashed mb-4 flex items-center justify-between pb-4 lg:mb-6 lg:pb-6">
                <h4 class="h4">Invest In Silver</h4>
                </div>

                <form class="grid grid-cols-2 gap-4 xxxl:gap-6" id="silverform">
                <div class="col-span-2 md:col-span-1">
                    <label for="account" class="mb-4 md:text-lg font-medium block">
                    Plan Name
                    </label>
                    <input type="text"
                    class="w-full text-sm  bg-secondary1/5 dark:bg-bg3 border border-n30 dark:border-n500 rounded-3xl px-3 md:px-6 py-2 md:py-3"
                     name="name" id="name" value="Silver" readonly required />
                </div>
                
                <div class="col-span-2 md:col-span-1">
                    <label for="account" class="mb-4 md:text-lg font-medium block">
                    Interest(%)
                    </label>
                    <input type="number"
                    class="w-full text-sm  bg-secondary1/5 dark:bg-bg3 border border-n30 dark:border-n500 rounded-3xl px-3 md:px-6 py-2 md:py-3"
                     name="interest" id="interest" value="15" readonly required />
                </div>
                <div class="col-span-2 md:col-span-1">
                    <label for="account" class="mb-4 md:text-lg font-medium block">
                    Enter Amount
                    </label>
                    <input type="number"
                    class="w-full text-sm  bg-secondary1/5 dark:bg-bg3 border border-n30 dark:border-n500 rounded-3xl px-3 md:px-6 py-2 md:py-3"
                    placeholder="0.00" min="1000" max="{{app.user.totalbalance}}" name="amount" id="amount" required />
                </div>
                
                <div class="col-span-2 md:col-span-1">
                    <label for="medium" class="mb-4 md:text-lg font-medium block">
                    Duration
                    </label>
                    <select name="duration" class="nc-select full dark:!border-n500">
                    <option value="14" selected>14 Days</option>
                   
                    </select>
                </div>
                

                
                
               
                <div class="col-span-2 flex gap-4 md:gap-6 mt-2">
                    <button class="btn" type="submit">
                    Invest Now
                    </button>
                    <button class="btn-outline" type="reset">
                    Cancel
                    </button>
                </div>
                </form>
            </div>
            </div>
        </div>
   </div>


